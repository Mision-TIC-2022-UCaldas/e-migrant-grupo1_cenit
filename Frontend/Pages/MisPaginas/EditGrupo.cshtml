    </div>
        <div class="for-group">
        <label asp-for="Grupo.numero_documento "></label>
        <input asp-for="Grupo.numero_documento" class="form-control">
        <span class="text-danger" asp-validation-for="Grupo.numero_documento"></span>        
    </div>
        <div class="for-group">
        <label asp-for="Grupo.nombre  "></label>
        <input asp-for="Grupo.nombre " class="form-control">
        <span class="text-danger" asp-validation-for="Grupo.nombre"></span>        
    </div>
        <div class="for-group">
        <label asp-for="Grupo.apellidos"></label>
        <input asp-for="Grupo.apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Grupo.apellidos"></span>        
    </div>
    <div class="for-group">
        <label asp-for="Grupo.telefono"></label>
        <input asp-for="Grupo.telefono" class="form-control">
        <span class="text-danger" asp-validation-for="Grupo.telefono"></span>        
