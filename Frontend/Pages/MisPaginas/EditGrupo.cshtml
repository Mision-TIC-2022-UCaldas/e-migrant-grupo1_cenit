    <div class="for-group">
        <label asp-for="Grupo.correo"></label>
        <input asp-for="Grupo.correo" class="form-control">
        <span class="text-danger" asp-validation-for="Grupo.correo"></span>        
    </div>
    <div class="for-group">
        <label asp-for="Grupo.cercania"></label>
        <input asp-for="Grupo.cercania" class="form-control">
        <span class="text-danger" asp-validation-for="Grupo.cercania"></span>        
    </div>
    
     <button type="submit" class="btn btn-primary">Guardar</button>
     <a href="/MisPaginas/Grupo" class="btn-ghost secondary round"> Volver</a>

</form>


