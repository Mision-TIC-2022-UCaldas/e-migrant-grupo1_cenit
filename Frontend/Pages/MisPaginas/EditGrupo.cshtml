@page
@model Frontend.Pages.EditGrupoModel
@{
    int grupoId=Model.Grupo.Id;
}
<h2>Editar Datos Grupo</h2>
<form method="post">
    <input type="hidden" asp-for="Grupo.Id"/>

        <div class="for-group">
        <label asp-for="Grupo.tipo_documento"> Tipo de documento </label>
        <input asp-for="Grupo.tipo_documento" class="form-control">
